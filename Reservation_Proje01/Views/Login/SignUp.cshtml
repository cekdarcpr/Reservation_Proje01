@model Reservation_Proje01.Models.UserRegisterViewModel
@{
    Layout = null;
}

@* ---> Cekdar123* <---  *@


<!DOCTYPE html>
<html lang="zxx">

<head>
	<title>Invent Signup Form Responsive Widget Template | Home :: W3layouts</title>
	<!-- Meta tag Keywords -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta charset="UTF-8" />
	<meta name="keywords"
		  content="Invent Signup Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
	<script>
		addEventListener("load", function () {
			setTimeout(hideURLbar, 0);
		}, false);

		function hideURLbar() {
			window.scrollTo(0, 1);
		}
	</script>
	<style>
		.textdanger{
			color:red;
		}
	</style>

	<!-- //Meta tag Keywords -->
	<!--/Style-CSS -->
	<link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all" />
	<!--//Style-CSS -->
</head>

<body>
	<!-- /login-section -->
	<section class="w3l-login-6">
		<div class="login-hny">
			<div class="form-content">
				<div class="form-right">
					<div class="overlay">
						<div class="grid-info-form">
							<h5>Meeting Room Rezervasyon</h5>
							<h3> Hesap Oluşturun </h3>
							<p>
								Müthiş manzaralı odalarımızda ister toplantı ister çalışma planla ve odanı tek tuşla rezerve et.
							</p>
							<a href="index.html" class="read-more-1 btn">Hadi Başlayalım</a>
						</div>

					</div>
				</div>
				<div class="form-left">
					<div class="middle">
						<h4>Bize Katılın</h4>
						<p>Hemen Ücretsiz Hesap Oluşturun.</p>
					</div>
					<form method="post" class="signin-form">
						<div class="form-input">
							<label>Adınız</label>
							<input type="text" required asp-for="Name" />
							<span asp-validation-for="Name" class="textdanger"></span>
						</div>
						<div class="form-input">
							<label>Soyadınız</label>
							<input type="text" asp-for="Surname" />
							<span asp-validation-for="Surname" class="textdanger"></span>
						</div>
						<div class="form-input">
							<label>Kullanıcı Adınız</label>
							<input type="text" asp-for="Username" />
							<span asp-validation-for="Username" class="textdanger"></span>
						</div>
						<div class="form-input">
							<label>Email</label>
							<input type="email" asp-for="Mail" />
							<span asp-validation-for="Mail" class="textdanger"></span>
						</div>
						<div class="form-input">
							<label>Şifre</label>
							<input type="password" asp-for="Password"  />
							<span asp-validation-for="Password" class="textdanger"></span>

						</div>
						<div class="form-input">
							<label>Şifre Tekrar</label>
							<input type="password" asp-for="ConfirmPassword"  />
							<span asp-validation-for="ConfirmPassword" class="textdanger"></span>
						</div>
						<div class="textdanger" asp-validation-summary="ModelOnly"></div>
						<label class="container">
							Şartları okudum<a href="#">Kabul Ediyorum</a>
							<input type="checkbox">
							<span class="checkmark"></span>
						</label>
						<button class="btn">Kayıt Ol</button>
					</form>
					<div class="copy-right text-center">
						<p>
							© @DateTime.Now.Year Tüm Hakları Saklıdır...
						</p>
					</div>
				</div>

			</div>

		</div>
	</section>
	<!-- //login-section -->
</body>

</html>