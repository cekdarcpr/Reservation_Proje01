@using EntityLayer.Concrete
@model List<Reservation>
@{
    ViewData["Title"] = "ReservationUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<h1>Kullanıcının Geçmiş Rezervasyonları</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
@*         <th>Ad Soyad</th> *@
        <th>Oda</th>
        <th>Kişi Sayısı</th>
        <th>Tarih</th>
        <th>Detaylar</th>

    </tr>
    @foreach (var item in Model)
    {

        <tr>
            @{
                sayac = sayac + 1;
            }
            <td>@sayac</td>
@*             <td>@item.AppUser.Name @item.AppUser.Surname</td> *@
            <td>@item.Destination.City</td>
            <td>@item.PersonCount</td>
            <td>@(((DateTime)item.ResevationDate).ToString("dd-MMM-yyyy"))</td>
            <td><a href="#" class="btn btn-outline-success">Detaylar</a></td>

        </tr>

    }
</table>