@model IEnumerable<BookingHotelSearchModel.Result>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Booking hotel rezervasyon Sayfası</h1> 
<br />
<h3>Arama Yapılan Şehir &nbsp; &nbsp; Prag/Çekya</h3>

<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Otel Adı</th>
        <th>Otel Puanı</th>
        <th>Otel Değerlendirmesi</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.name</td>
            <td>@item.reviewScore</td>
            @{
                if (item.reviewScoreWord == "Exceptional")
                {
                    <td>Olağanüstü</td>
                }
                if (item.reviewScoreWord == "Superb")
                {
                    <td>Mükemmel</td>
                }
                if (item.reviewScoreWord == "Fabulous")
                {
                    <td>Efsanevi</td>
                }
                if (item.reviewScoreWord == "Very good")
                {
                    <td>Çok İyi</td>
                }
                if (item.reviewScoreWord == "Good")
                {
                    <td>İyi</td>
                }
            }
            @* <td>@item.reviewScoreWord</td> *@
            <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
        </tr>

        
    }
</table>